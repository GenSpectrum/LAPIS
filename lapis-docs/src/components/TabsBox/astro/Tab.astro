---
// This code is largely based/copied from
// https://github.com/withastro/starlight/tree/6c387705f1019466ad177355d78eb25f58d928ec/packages/starlight/user-components
import { TabItemTagname } from './rehype-tabs';

interface Props {
    label: string;
}

const { label } = Astro.props;

if (!label) {
    throw new Error('Missing prop `label` on `<TabItem>` component.');
}
---

<TabItemTagname data-label={label}>
    <slot />
</TabItemTagname>
